{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "outDir": "output",
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "allowJs": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": [
    "*.ts", "*.manager"
  ]
}
