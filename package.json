{
  "name": "typescript-esm",
  "version": "2.0.0",
  "description": "Tooling to enable interoperability between TypeScript and mjs for Node.js.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "author": "Kristofer Baxter",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "bin": {
    "tsc-esm": "./dist/tsc-esm"
  },
  "scripts": {
    "clean": "rimraf dist/* test/*/output/",
    "format": "prettier --write '**/*.mjs'",
    "try": "./dist/tsc-esm",
    "build": "yarn clean; rollup -c; chmod a+x ./dist/tsc-esm",
    "pretest": "yarn build",
    "test": "yarn tap test/**/*.test.mjs",
    "tap": "c8 tap --no-coverage --no-esm --node-arg=--experimental-modules",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@kristoferbaxter/estree-walker": "2.0.2",
    "acorn": "8.1.0",
    "fast-glob": "3.2.5",
    "magic-string": "0.25.7",
    "mri": "1.1.6",
    "promise.allsettled": "1.0.4",
    "typescript": "4.2.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "17.1.0",
    "@rollup/plugin-node-resolve": "11.2.0",
    "c8": "7.6.0",
    "json5": "2.2.0",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "rollup": "2.42.0",
    "tap": "14.11.0"
  },
  "volta": {
    "node": "14.16.0",
    "yarn": "1.22.5"
  },
  "prettier": {
    "printWidth": 150,
    "trailingComma": "all",
    "parser": "babel",
    "singleQuote": true
  },
  "exports": {
    ".": "./dist/index.mjs"
  }
}
